<!DOCTYPE html>
<html>
<head>
	<title>时钟</title>
	<style type="text/css">
	*{
		margin: 0;
		padding: 0;
	}
	ul{
		list-style: none;
	}
	#clock{
		width: 200px;
		height: 200px;
		border-radius: 50%;
		border:1px solid;
		margin:200px auto;
		position: relative;
		-webkit-transform-origin:center bottom;
	}
	#dial li{
		width: 2px;
		height: 4px;
		position: absolute;
		left: 99px;
		background: #000;
		-webkit-transform-origin:center 100px;

	}
	#dial li:nth-child(5n+1){
		height: 8px;
	}
	#hour{
		height: 35px;
		width: 6px;
		background: #000;
		position: absolute;
		left: 97px;
		top:65px;
		-webkit-transform-origin:center bottom;
	}
	#minute{
		width: 4px;
		height: 45px;
		position: absolute;
		left: 98px;
		top:55px;
		background: blue;
		-webkit-transform-origin:center bottom;
	}
	#second{
		width: 2px;
		height: 65px;
		background: #ccf;
		position: absolute;
		left: 99px;
		top: 35px;
		-webkit-transform-origin:center bottom;
	}
	</style>
</head>
<body>
	<div id="clock">
		<ul id="dial"></ul>	
		<div id="hour"></div>	
		<div id="minute"></div>
		<div id="second"></div>
	</div>
	<script type="text/javascript">
		(function(){
			var oDial = document.getElementById('dial');
			var oHour = document.getElementById('hour');
			var oMinute = document.getElementById('minute');
			var oSecond = document.getElementById('second');

			var html = '';
			for(var i=0;i<60;i++){
				html +='<li style = "-webkit-transform:rotate('+6*i+'deg)"></li>';
			}
			oDial.innerHTML = html;
			function run(){
				var now = new Date();
				var iMinute = now.getMinutes(), 
				iHour = now.getHours() + iMinute/60,			 
				iSecond = now.getSeconds();

			 oHour.style.WebkitTransform = 'rotate(' + iHour*30 + 'deg)';
			 oMinute.style.WebkitTransform = 'rotate('+ iMinute*6 + 'deg)';
			 oSecond.style.WebkitTransform = 'rotate('+ iSecond*6 + 'deg)';
			}
			run();
			setInterval(function(){
				run();
			},1000);
			
		})();
	</script>
</body>
</html>
